<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartScreen"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hang Droid"
            android:id="@+id/textViewTitle"
            android:textColor="#FAFAFA"
            android:textSize="70dp"
            android:password="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="175dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_button"
            android:text="Single Player"
            android:id="@+id/singlePlayer"
            android:layout_gravity="center_horizontal"
            android:onClick="openSinglePlayer"
            android:layout_marginTop="-10dp"
            android:fontFamily="bebas-neau"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/menu_button"
            android:text="Multiplayer"
            android:id="@+id/multiPlayer"
            android:layout_gravity="center_horizontal"
            android:onClick="openMultiplayer"
            android:layout_marginTop="-10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="bebas-neau"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/menu_button"
            android:text="High Scores"
            android:id="@+id/highScores"
            android:layout_gravity="center_horizontal"
            android:onClick="openScores"
            android:layout_marginTop="-10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="bebas-neau"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

</RelativeLayout>
