<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartScreen"
    android:background="@drawable/bkg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_margin="40dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/menu_button"
            android:text="Single Player"
            android:id="@+id/singlePlayer"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:onClick="openSinglePlayer" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/menu_button"
            android:text="Multiplayer"
            android:id="@+id/multiPlayer"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:onClick="openMultiplayer" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/menu_button"
            android:text="High Scores"
            android:id="@+id/highScores"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:onClick="openScores" />

    </LinearLayout>

</RelativeLayout>
